{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2015",  // or ES6, ES2017, etc.
    "lib": ["ES2015", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
